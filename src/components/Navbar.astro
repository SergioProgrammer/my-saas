---
import "../styles/global.css";
---

<nav class="bg-white shadow">
  <div class="max-w-xl mx-auto">
    <div class="flex flex-wrap items-center gap-y-2 py-3">
      <!-- Brand -->
      <a href="/" class="flex items-center">
        <img 
          src="/Procesia.svg" 
          alt="ProcesIA Logo" 
          class="h-8 sm:h-10 w-auto"
        />
      </a>

      <!-- Links: always visible, responsive sizes -->
      <div class="ml-auto flex flex-wrap items-center gap-3 sm:gap-5">
        <a href="/pricing" class="whitespace-nowrap text-sm sm:text-base text-gray-700 hover:text-blue-600 font-medium">
          Precios
        </a>
        <a href="https://app-procesia.vercel.app/login" class="whitespace-nowrap text-sm sm:text-base text-gray-700 hover:text-blue-600 font-medium">
          Entrar
        </a>
        <a
          href="https://app-procesia.vercel.app/registro"
          class="whitespace-nowrap text-sm sm:text-base px-3 py-2 sm:px-5 sm:py-2.5 bg-gray-700 text-white rounded-lg font-medium hover:bg-gray-800 transition"
        >
          Registrarse
        </a>
      </div>
    </div>
  </div>
</nav>
