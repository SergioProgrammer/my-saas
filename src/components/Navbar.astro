---
import "../styles/global.css";
---


<!-- Navbar sticky -->
<nav class="sticky top-0 bg-white shadow z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex flex-col items-center gap-3 py-3 sm:flex-row sm:items-center sm:justify-between sm:gap-4">
      <!-- Brand -->
      <a href="/" class="flex items-center shrink-0">
        <img
          src="/Procesia.svg"
          alt="ProcesIA Consulting logo"
          class="h-9 sm:h-10 w-auto"
        />
      </a>

      <!-- Links -->
      <div class="flex w-full flex-col items-stretch gap-2 sm:w-auto sm:flex-row sm:items-center sm:gap-5">
        <a href="/tienda" class="w-full whitespace-nowrap text-center text-sm sm:w-auto sm:text-left sm:text-base text-gray-700 hover:text-blue-600 font-medium">
          Servicios
        </a>
        <a
          href="/#metodologia"
          class="w-full whitespace-nowrap text-center text-sm sm:w-auto sm:text-left sm:text-base text-gray-700 hover:text-blue-600 font-medium"
        >
          Metodología
        </a>
        <a
          href="https://app-procesia.vercel.app/login"
          class="w-full whitespace-nowrap text-center text-sm sm:w-auto sm:text-left sm:text-base text-gray-700 hover:text-blue-600 font-medium"
        >
          Área cliente
        </a>
        <a
          href="https://wa.me/34655689827"
          class="w-full whitespace-nowrap text-center text-sm sm:w-auto sm:text-left sm:text-base px-3 py-1.5 sm:px-5 sm:py-2.5 bg-gray-700 text-white rounded-lg font-medium hover:bg-gray-800 transition"
        >
          Agenda diagnóstico
        </a>
      </div>
    </div>
  </div>
</nav>
